@model List<Persen>
@{
    ViewData["Title"] = "Home Page";
    int rowCount = 1;
}
<h2>
    <a asp-action="Create"  class="btn btn-success">Create New Persen</a>
</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>name</th>
        <th>Email</th>
        <th>pass</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@rowCount</td>
            <td>@item.Name</td>
            <td>@item.Password</td>
            <td>@item.Password</td>
            <td>
                <a href="#" class="btn btn-warning">Edit</a>
                <a href="#" class="btn btn-danger">Delet</a>
            </td>
        </tr>
        rowCount++;
    }
</table>